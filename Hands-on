    <h1>Point of Sale - Register</h1>
    <form>
        <label for="username">Username:</label><br>
        <input type="text" id="username" name="username" required maxlength="20"><br>

        <label for="email">Email:</label><br>
        <input type="email" id="email" name="email" required><br>

        <label for="password">Password:</label><br>
        <input type="password" id="password" name="password" required pattern="[A-Za-z0-9]{6,}" title="At least 6 characters"><br>

        <label for="age">Age:</label><br>
        <input type="number" id="age" name="age" min="18" max="100" required><br>

        <button type="submit">Register</button>
    </form>
